// 清除浮动
$clear()
  &:after
    content: ''
    display: block
    clear: both

// 不换行
$no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

$flex()
  line-height: normal
  display: flexbox
  -webkit-display: -webkit-flex
  -ms-display: -ms-flex
  flex-flow: row wrap

$active-block()
  &:active
    box-shadow: inset 0 .6rem .4rem rgba(#000, 0.2), inset 0 -0.6rem .4rem rgba(#000, 0.2)
